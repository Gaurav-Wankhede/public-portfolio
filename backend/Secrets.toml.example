# Example Secrets Configuration for Shuttle.rs
# Copy this file to Secrets.toml and fill in your actual credentials
# NEVER commit Secrets.toml to version control!

# ============================================
# REQUIRED CONFIGURATION
# ============================================

# MongoDB Atlas Connection
MONGODB_URI = "mongodb+srv://username:password@cluster.mongodb.net/?appName=portfolio"
MONGODB_DB = "portfolio"

# Google Gemini AI API (for chat feature)
GOOGLE_API_KEY = "your-google-gemini-api-key-here"

# Admin Authentication (Single User Access)
ADMIN_EMAIL = "your-admin-email@example.com"
ADMIN_PASSWORD = "your-secure-admin-password"

# JWT Secret (Optional - auto-generated if not set, but recommended for production)
# JWT_SECRET = "your-secure-jwt-secret-at-least-32-characters"

# ============================================
# PORTFOLIO OWNER CONFIGURATION (for AI Chat)
# ============================================
# These configure the AI chat persona to represent YOU

# Required: Your name and professional title
PORTFOLIO_OWNER_NAME = "Your Name"
PORTFOLIO_OWNER_TITLE = "Full-Stack Developer"
PORTFOLIO_TAGLINE = "Building solutions that matter"
PORTFOLIO_LOCATION = "Your City, Country"

# Your expertise areas (comma-separated)
PORTFOLIO_EXPERTISE = "Web Development, AI/ML, Cloud Computing"

# Social Links (Optional - include only the ones you have)
PORTFOLIO_YOUTUBE_URL = "https://youtube.com/@yourchannel"
PORTFOLIO_YOUTUBE_CHANNEL = "Your Channel Name"
PORTFOLIO_LINKEDIN_URL = "https://linkedin.com/in/yourprofile"
PORTFOLIO_GITHUB_URL = "https://github.com/yourusername"
PORTFOLIO_TWITTER_URL = "https://twitter.com/yourhandle"
PORTFOLIO_EMAIL = "your-email@example.com"
PORTFOLIO_WEBSITE_URL = "https://yourwebsite.com"

# ============================================
# OPTIONAL CONFIGURATION
# ============================================

# Cloudinary Configuration (for image uploads)
# CLOUDINARY_CLOUD_NAME = "your-cloudinary-cloud-name"
# CLOUDINARY_API_KEY = "your-cloudinary-api-key"
# CLOUDINARY_API_SECRET = "your-cloudinary-api-secret"
