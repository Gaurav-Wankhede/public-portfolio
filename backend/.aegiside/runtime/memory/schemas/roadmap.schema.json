{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["schema_version", "last_updated", "metrics"],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "last_updated": {
      "type": "string",
      "format": "date-time"
    },
    "metrics": {
      "type": "object",
      "description": "Local milestone RL ONLY - Reference progress.json for total_rl_score",
      "required": ["rl_source_ref"],
      "properties": {
        "rl_source_ref": {"type": "string", "const": "progress.json", "description": "SINGLE SOURCE OF TRUTH for total_rl_score"},
        "tasks_completed": {"type": "integer", "minimum": 0},
        "tasks_failed": {"type": "integer", "minimum": 0},
        "commits": {"type": "integer", "minimum": 0}
      }
    },
    "project_overview": {
      "type": "object",
      "properties": {
        "name": {"type": "string"},
        "objective": {"type": "string"},
        "status": {"type": "string"},
        "completion": {"type": "string"}
      }
    },
    "strategic_goals": {
      "type": "array",
      "description": "TOP-APPEND MANDATORY: Newest goal MUST be at [0]. Prepend, never append.",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "title": {"type": "string"},
          "status": {"type": "string"},
          "completion_date": {"type": "string", "format": "date-time"},
          "deliverables": {"type": "array", "items": {"type": "string"}},
          "impact": {"type": "string"},
          "priority": {"type": "string"}
        }
      }
    },
    "client_requirements": {
      "type": "object",
      "properties": {
        "platforms": {"type": "array", "items": {"type": "string"}},
        "scale": {"type": "string"},
        "cost": {"type": "string"},
        "timeline": {"type": "string"}
      }
    }
  }
}
